model LegalTimeEntry {
  id              String               @id @default(uuid()) @db.VarChar
  workspaceId     String               @map("workspace_id") @db.VarChar
  matterId        String               @map("matter_id") @db.VarChar
  clientId        String               @map("client_id") @db.VarChar
  anwaltId        String               @map("anwalt_id") @db.VarChar
  anwaltUserId    String?              @map("anwalt_user_id") @db.VarChar
  description     String               @db.Text
