{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.subsum.io/api/:path*"
    },
    {
      "source": "/graphql",
      "destination": "https://api.subsum.io/graphql"
    },
    {
      "source": "/graphql/:path*",
      "destination": "https://api.subsum.io/graphql/:path*"
    },
    {
      "source": "/socket.io",
      "destination": "https://api.subsum.io/socket.io"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "https://api.subsum.io/socket.io/:path*"
    },
    {
      "source": "/((?!api/|graphql|socket.io|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}
